{
  "name": "api",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "biome:check": "biome check .",
    "biome:check:write": "biome check --write .",
    "biome:format": "biome format .",
    "biome:format:write": "biome format --write .",
    "biome:lint": "biome lint .",
    "biome:lint:write": "biome lint --write .",
    "biome:ci": "biome ci .",
    "db:create": "wrangler d1 migrations create restinvoice-db",
    "db:migrate:local": "wrangler d1 migrations apply restinvoice-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply restinvoice-db --remote"
  },
  "dependencies": {
    "@clerk/backend": "^2.29.3",
    "@hono/clerk-auth": "^3.1.0",
    "@hono/swagger-ui": "^0.5.3",
    "@hono/zod-openapi": "^1.2.0",
    "hono": "^4.11.4",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@cloudflare/workers-types": "^4.20260117.0",
    "wrangler": "^4.4.0"
  }
}
